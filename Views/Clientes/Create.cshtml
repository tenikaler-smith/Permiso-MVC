@model PersimosMVC.Models.Cliente

@{
    ViewBag.Title = "Create";
}

<div class="content">


    @using (Html.BeginForm())
    {
        @*@Html.AntiForgeryToken()*@

        <div class="form">
            <h4>Cliente</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdCliente)

            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.Sexo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Sexo)
                        @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="col-md-2">@Html.DisplayNameFor(model => model.IdProvincia)</div>
                    @Html.DropDownListFor(model => model.IdProvincia, (IEnumerable<SelectListItem>)ViewBag.ListaProvincia, "Seleccione", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdProvincia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="col-md-2">@Html.DisplayNameFor(model => model.IdDistrito)</div>
                    @Html.DropDownListFor(model => model.IdDistrito, (IEnumerable<SelectListItem>)ViewBag.ListaDistrito, "Seleccione", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdDistrito, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(model => model.IdCorregimiento)
                    </div>
                    @Html.DropDownListFor(model => model.IdCorregimiento, (IEnumerable<SelectListItem>)ViewBag.ListaCorregimiento, "Seleccione", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdCorregimiento, "", new { @class = "text-danger" })
                </div>
                <br />
            </div>

        </div>

        <div class="col-md-offset-2 col-md-10">
            <button type="button" id="guardar-ajax" class="btn btn-primary">Guardar</button>
        </div>

        <div>
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/funciones")
}








